---
import type { ComponentProps } from "astro/types";
import { Code as AstroCode } from "astro:components";

interface Props extends ComponentProps<typeof AstroCode> {}

const props = Astro.props;
---

<AstroCode {...props} />

<style>
  :global(pre:has(code), :not(pre) > code) {
    @apply font-mono rounded-md text-[length:85%] m-0 whitespace-break-spaces;
  }

  :global(pre:has(code)) {
    @apply px-6;
  }

  :global(:not(pre) > code) {
    @apply px-2 py-1;
  }
</style>
