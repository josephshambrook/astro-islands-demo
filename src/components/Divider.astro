---
const props = Astro.props;
---

<hr {...props} />

<style>
  hr {
    /* the wavy line */
    /* Absolutely no point trying to do this in Tailwind! */
    background-color: #fff;
    border: none;
    --mask: radial-gradient(
          39.17px at 50% calc(100% + 27.5px),
          #0000 calc(99% - 4px),
          #000 calc(101% - 4px) 99%,
          #0000 101%
        )
        calc(50% - 50px) calc(50% - 14.5px + 0.5px) / 100px 29px repeat-x,
      radial-gradient(
          39.17px at 50% -27.5px,
          #0000 calc(99% - 4px),
          #000 calc(101% - 4px) 99%,
          #0000 101%
        )
        50% calc(50% + 14.5px) / 100px 29px repeat-x;
    -webkit-mask: var(--mask);
    mask: var(--mask);

    content: "";
    display: block;
    height: 25px;
    margin-inline: auto;
    padding-block: 2rem;
    position: relative;
    width: 80%;
  }
</style>
