---
import Link from "@components/Link.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="A small demo of component Islands in Astro"
    />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>🏝️</text></svg>"
    />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Islands Demo</title>
  </head>
  <body class="bg-cyan-200 text-neutral-900 font-sans text-base">
    <header class="col-span-full">
      <h1 class="text-5xl mt-16 font-bold text-center px-2">
        🏝️ Astro Islands Demo
      </h1>
      <h2 class="text-xl mt-3 font-bold text-center">
        By <a href="https://josephshambrook.dev">Joseph Shambrook</a>
      </h2>
    </header>

    <main
      class="grid gap-8 ms-auto me-auto mt-16 grid-cols-1 px-4 lg:grid-cols-[minmax(0,2fr)_minmax(0,1fr)] lg:max-w-6xl"
    >
      <slot />
    </main>

    <footer class="bg-cyan-800 py-10 mt-16 px-4 text-gray-100">
      <div class="max-w-3xl ms-auto me-auto">
        <p>
          This webpage was developed by <Link
            href="https://josephshambrook.dev"
            text="Joseph Shambrook"
            class="text-gray-100"
          />, a full-stack developer residing in Edinburgh, Scotland.
        </p>
      </div>
    </footer>
  </body>
</html>
